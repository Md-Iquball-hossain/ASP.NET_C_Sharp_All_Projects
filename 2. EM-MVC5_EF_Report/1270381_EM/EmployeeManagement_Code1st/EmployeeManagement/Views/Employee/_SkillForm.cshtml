@model  EmployeeManagement.ViewModel.EmployeeInputModel
@for (var i = 0; i < Model.Skills.Count; i++)
{
    <div class="col-2">
        <label>Degree</label>
        @Html.TextBoxFor(x => Model.Skills[i].Course, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Skills[i].Course, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>Institute</label>
        @Html.TextBoxFor(x => Model.Skills[i].Institute, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Skills[i].Institute, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>Department</label>
        @Html.TextBoxFor(x => Model.Skills[i].Department, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Skills[i].Department, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>Passing year</label>
        @Html.TextBoxFor(x => Model.Skills[i].PassingYear, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Skills[i].PassingYear, "", new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <label>Result</label>
        @Html.TextBoxFor(x => Model.Skills[i].Result, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => Model.Skills[i].Result, "", new { @class = "text-danger" })
    </div>
    <div class="col-1">
        <button class="btn btn-danger btn-sm mt-4 del" data-index="@i" type="button">Remove</button>
    </div>
}


