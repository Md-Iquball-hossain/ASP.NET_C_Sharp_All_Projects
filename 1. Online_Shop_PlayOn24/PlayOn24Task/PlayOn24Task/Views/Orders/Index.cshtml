@model  IEnumerable<PlayOn24Task.Models.Order>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="offset-3 col-6">
        <h3 class="text-bg-secondary text-center">Order Details </h3>
        <div>&nbsp;</div>
        <div class="d-flex justify-content-center mb-1 ">
            @Html.ActionLink("Create New Order", "Create", "Orders", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <div>&nbsp;</div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Order Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Customer.CustomerName</td>
                        <td>@p.OrderDate</td>
                        <td>@p.DeliveryDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




