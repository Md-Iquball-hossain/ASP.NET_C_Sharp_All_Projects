@model  IEnumerable<PlayOn24Task.Models.Product>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class=" offset-3 col-6">
        <h3 class="text-bg-secondary text-center">Products Details</h3>
        <div>&nbsp;</div>
        <div class="d-flex justify-content-center mb-1">
            @Html.ActionLink("Create New Product", "Create", "Products", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <div>&nbsp;</div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ProductName</td>
                        <td>@p.Price</td>
                        <td>
                            <a href="/Products/Delete/@p.ProductId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



