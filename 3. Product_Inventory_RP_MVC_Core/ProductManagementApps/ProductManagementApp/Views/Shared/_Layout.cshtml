<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 10px;
            
        }

        .main {
            min-height: calc(100vh - 140px);
        }
    </style>
    @await RenderSectionAsync("styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-info">
        @Html.ActionLink("Perkey Rabbit Corporation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("Companies", "Index", "Companies", new { area = "" }, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("Product Inventory", "Index", "Products", new { area = "" }, new { @class = "nav-link text-white" })</li>
                

            </ul>
        </div>
    </nav>
    <div class="container body-content">
        <main class="container-fluid" style="min-height:calc(100vh - 120px)">
            @RenderBody()
        </main>
    </div>
