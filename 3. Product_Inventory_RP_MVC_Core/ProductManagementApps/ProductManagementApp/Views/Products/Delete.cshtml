@model Product
@{
    ViewData["Title"] = "Delete";
}
<div>&nbsp</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="fs-1 text-center">Confirm delete?</h3>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Product image</th>
                        <th>Product name</th>
                        <th>Price</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center" style="padding:0; width:150px">
                            <img src="~/Images/@Model.Picture" class="rounded-circle" style="width:40px" />
                        </td>
                        <td>@Model.Name</td>
                        <td>@Model.UnitPrice / @Model.SellUnit</td>
                    </tr>
                    <tr>
                        <td class="border-end-0"></td>
                        <td colspan="5" class="border-start-0">
                            <h5>Inventories</h5>
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pi in Model.ProductInventories)
                                    {
                                        <tr>
                                            <td>@($"{pi.Date: yyyy-MM-dd}")</td>
                                            <td>@pi.Quantity</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div class="col-12">
            <form asp-controller="Products" asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="d-flex justify-content-end me-1">
                    <button type="submit" class="btn btn-warning">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>


